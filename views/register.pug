extends ./layouts/layout.pug

block content
  .panes-wrapper
    .left-pane
      .pane-content
        h1.heading=message
        p.paragraph="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed a mi vestibulum felis tincidunt eleifend in ut erat. Nullam lacinia metus et pretium tempus. Ut blandit leo leo, nec congue diam accumsan quis."
